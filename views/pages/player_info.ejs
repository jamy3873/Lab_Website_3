<% include ../partials/header %>
<% include ../partials/menu %>
	<div class="container">
		<br>
		<div class="row">
			<div class="col-4">
				<div class="card">
				<!-- TODO: Modify the ejs code below, to conditionally set the image_src to be from our chosen player -->
				  <%
				  var image_src = '../resources/img/helmet.jpg';
				  if(player){
				  	image_src = '../resources/img/player'+player.id+'.jpg';
				  }
				  %>
				 <img class="card-img-top" id="player_img" src= "<%- image_src %>" alt="Image of Football Player">
				  <div class="card-body mx-auto">
					<form class="form"action="/player_info/select_player" method="get">
						<select class="custom-select" name="player_choice" onchange="this.form.submit()">
							 <option selected>Select Player</option>
							 <% if(player_list){
							 	var options='';
							 	player_list.forEach(function(item){
							 		options += '<option value = "'+item.id+'">'+item.name+'</option>';
							 	});%>
							 	<%- options %>
							 <% } %>
							 <!-- TODO: Populate our select with player options
							 			For each player, set a new option with a value matching the palyer's id, 
							 			but will display the player's name-->
						</select>
					</form>
				  </div>
				</div>
			</div>
			<div class="col-8">
				<div class="table-responsive">
					<table class="table">
						<tr>
							<!-- TODO: Set Player Information
							 			If a player has been selected, fill in their information in each of the fields below.
							 		    You'll need to calculate here the player's average rushing, receiving, and passing yards.-->
							<th>Year</th>
							<td><%-player.year %></td>
						</tr>
						<tr>
							<th>Major</th>
							<td><%- player.major %></td>
						</tr>
						<tr>
							<th>Games Played</th>
							<td><%- games %></td>
						</tr>
						<tr>
							<td>Passing Yards: <%- player.passing_yards %></td>
							<td>Avg. Passing Yards: <%- Math.floor(player.passing_yards/games) %></td>
						</tr>
						<tr>
							<td>Rushing Yards: <%- player.rushing_yards %></td>
							<td>Avg. Rushing Yards: <%- Math.floor(player.rushing_yards/games) %></td>
						</tr>
						<tr>
							<td>Receiving Yards: <%- player.receiving_yards %></td>
							<td>Avg. Receiving Yards: <%- Math.floor(player.receiving_yards/games) %></td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>
  
<% include ../partials/footer %>